/* 修改为蓝色系并占满屏幕 */
.container {
  background-color: #007AFF; /* 蓝色背景 */
  padding: 20rpx;
  height: 100vh; /* 占满整个屏幕高度 */
  width: 100vw; /* 占满整个屏幕宽度 */
}
.title {
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 20rpx;
}
.info-item {
  display: flex;
  align-items: center;
  border-bottom: 1px solid white;
  padding: 10rpx 0;
}
.label {
  width: 120rpx;
  color: white;
  font-size: 24rpx;
}
.value {
  flex: 1;
  color: white;
  font-size: 24rpx;
}