.container {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}



.input-group {
  background-color: #e6f7ff;
  padding: 40rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  border: 1px solid #91d5ff;
  width: 90%;
  box-sizing: border-box;
}

.input-label {
  color: #69b1ff;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.input-item {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.input-item icon {
  margin-right: 20rpx;
  color: #1e90ff;
  font-size: 30rpx;
}

.input-item input {
  flex: 1;
  border: 1px solid #91d5ff;
  border-radius: 5rpx;
  padding: 20rpx;
  background-color: #fff;
  font-size: 28rpx;
}

.calculate-btn {
  background-color: #1e90ff;
  color: white;
  width: 100%;
  padding: 20rpx;
  border-radius: 5rpx;
  margin-top: 30rpx;
  font-size: 28rpx;
}

.calculate-btn:hover {
  background-color: #007fff;
}

.result-group {
  background-color: #e6f7ff;
  padding: 40rpx;
  border-radius: 10rpx;
  border: 1px solid #91d5ff;
  width: 90%;
  box-sizing: border-box;
}

.result-label {
  color: #69b1ff;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.result-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.result-key {
  width: 200rpx;
  color: #1e90ff;
}

.result-value {
  flex: 1;
  color: #333;
}

.radio-item {
  display: inline-block;
  margin-right: 20rpx;
  font-size: 28rpx;
  color: #333;
}    