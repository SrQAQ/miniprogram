<view class="container">
  <view class="title">我的手机</view>
  <view class="info-item">
    <text class="label">品牌：</text>
    <text class="value">{{brand}}</text>
  </view>
  <view class="info-item">
    <text class="label">型号：</text>
    <text class="value">{{model}}</text>
  </view>
  <view class="info-item">
    <text class="label">系统：</text>
    <text class="value">{{system}}</text>
  </view>
  <view class="info-item">
    <text class="label">语言</text>
    <text class="value">{{language}}</text>
  </view>
  <view class="info-item">
    <text class="label">屏幕：</text>
    <text class="value">{{screenWidth}} X {{screenHeight}}</text>
  </view>
  <view class="info-item">
    <text class="label">网络</text>
    <text class="value">{{networkType}}</text>
  </view>
  <view class="info-item">
    <text class="label">像素比</text>
    <text class="value">{{pixelRatio}}</text>
  </view>
  <view class="info-item">
    <text class="label">微信版本</text>
    <text class="value">{{wechatVersion}}</text>
  </view>
</view>